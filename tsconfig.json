{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "types": ["jest"],
      "pretty": true,
      "strict": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization":false,
      "removeComments": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  }
}